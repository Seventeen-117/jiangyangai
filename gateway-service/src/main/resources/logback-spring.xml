<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 引入Spring Boot默认的配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>
    
    <!-- 添加启动时的状态监听器，确认配置加载正常 -->
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

    <!-- 控制台输出 - 开发环境友好 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId:%X{traceId}] [clientIp:%X{clientIp}] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 只在控制台显示INFO及以上级别 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- 主要日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>gateway-service/logs/${springAppName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>gateway-service/logs/${springAppName}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId:%X{traceId}] [clientIp:%X{clientIp}] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 错误日志文件 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>gateway-service/logs/${springAppName}-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>gateway-service/logs/${springAppName}-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId:%X{traceId}] [clientIp:%X{clientIp}] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 只记录ERROR级别 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- 网关路由日志文件 -->
    <appender name="ROUTE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>gateway-service/logs/${springAppName}-route.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>gateway-service/logs/${springAppName}-route.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>15</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId:%X{traceId}] [clientIp:%X{clientIp}] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 验证过滤器日志文件 -->
    <appender name="FILTER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>gateway-service/logs/${springAppName}-filter.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>gateway-service/logs/${springAppName}-filter.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>15</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId:%X{traceId}] [clientIp:%X{clientIp}] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 访问日志文件 -->
    <appender name="ACCESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>gateway-service/logs/${springAppName}-access.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>gateway-service/logs/${springAppName}-access.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId:%X{traceId}] [clientIp:%X{clientIp}] %-5level %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 异步文件输出 -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
        <neverBlock>false</neverBlock>
    </appender>

    <!-- 异步错误文件输出 -->
    <appender name="ASYNC_ERROR_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERROR_FILE"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
        <neverBlock>false</neverBlock>
    </appender>

    <!-- 异步路由日志 -->
    <appender name="ASYNC_ROUTE_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ROUTE_FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- 异步过滤器日志 -->
    <appender name="ASYNC_FILTER_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILTER_FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- 异步访问日志 -->
    <appender name="ASYNC_ACCESS_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ACCESS_FILE"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>



    <!-- ========================= 日志级别配置 ========================= -->
    
    <!-- 应用程序日志 -->
    <logger name="com.jiangyang.gateway" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </logger>
    
    <!-- 路由相关日志 -->
    <logger name="com.jiangyang.gateway.config" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_ROUTE_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </logger>
    
    <!-- 过滤器相关日志 -->
    <logger name="com.jiangyang.gateway.filter" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_FILTER_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </logger>
    
    <!-- Spring Cloud Gateway 核心日志 -->
    <logger name="org.springframework.cloud.gateway" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_ROUTE_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </logger>
    
    <!-- 路由定位器日志 -->
    <logger name="org.springframework.cloud.gateway.route.RouteDefinitionRouteLocator" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_ROUTE_FILE"/>
    </logger>
    
    <!-- 负载均衡日志 -->
    <logger name="org.springframework.cloud.loadbalancer" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_ROUTE_FILE"/>
    </logger>
    
    <!-- WebFlux 相关 -->
    <logger name="org.springframework.web.reactive" level="DEBUG"/>
    <logger name="reactor.netty" level="INFO"/>
    <logger name="reactor.netty.http.server.AccessLog" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_ACCESS_FILE"/>
    </logger>
    
    <!-- HTTP客户端相关 -->
    <logger name="org.springframework.web.reactive.function.client" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_ROUTE_FILE"/>
    </logger>
    
    <!-- Spring相关 -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.cloud.context.scope" level="WARN"/>
    <logger name="org.springframework.context.support" level="WARN"/>
    <logger name="org.springframework.beans.factory.support" level="WARN"/>
    <logger name="org.springframework.context.annotation" level="WARN"/>
    <logger name="org.springframework.context.support.PostProcessorRegistrationDelegate$BeanPostProcessorChecker" level="ERROR"/>
    <logger name="org.springframework.boot.autoconfigure" level="WARN"/>
    
    <!-- Nacos相关 -->
    <logger name="com.alibaba.nacos" level="WARN"/>
    <logger name="com.alibaba.cloud.nacos" level="WARN"/>
    
    <!-- Redis相关 (如果使用Redis限流) -->
    <logger name="org.springframework.data.redis" level="INFO"/>
    <logger name="io.lettuce.core" level="WARN"/>
    
    <!-- Jackson相关 -->
    <logger name="com.fasterxml.jackson" level="WARN"/>
    

    
    <!-- Netty相关 -->
    <logger name="io.netty" level="WARN"/>
    <logger name="io.netty.handler.logging" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_ACCESS_FILE"/>
    </logger>
    
    <!-- 限流相关 -->
    <logger name="org.springframework.cloud.gateway.filter.ratelimit" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_FILTER_FILE"/>
    </logger>
    
    <!-- 熔断器相关 -->
    <logger name="org.springframework.cloud.circuitbreaker" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_FILTER_FILE"/>
    </logger>

    <!-- 根日志级别 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
        

    </root>
</configuration>
